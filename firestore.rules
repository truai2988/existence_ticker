rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // --- Users Collection ---
    match /users/{userId} {
      allow read: if true;
      
      // SCHEMA ENFORCEMENT: Name and Location are required seeds for existence.
      // Only strict checking on CREATE.
      allow create: if isSignedIn() && isOwner(userId)
                    && request.resource.data.name is string && request.resource.data.name.size() > 0
                    && request.resource.data.location.prefecture is string
                    && request.resource.data.location.city is string
                    && request.resource.data.balance is number
                    && request.resource.data.last_updated is timestamp;

      // INTEGRITY CHECK: Update only requires the final state to be valid (e.g. non-negative balance)
      // Partial updates (only name) are allowed as long as the result is valid.
      allow update: if isSignedIn() && (
        // Case 1: Owner updating own profile
        (isOwner(userId) && request.resource.data.balance >= 0) ||
        // Case 2: Admin updating any profile (Governance)
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      ); 
      
      // Allow Owner to delete their own profile, OR Admin to delete any
      allow delete: if isOwner(userId) || isAdmin();
      
      // History Subcollection (for logs)
      match /history/{historyId} {
        allow read: if isOwner(userId);
        allow write: if isOwner(userId);
      }
    }

    // --- Wishes Collection ---
    match /wishes/{wishId} {
      allow read: if true;
      
      // Creation: Must be signed in, and requester_id must match auth
      allow create: if isSignedIn() 
                    && request.resource.data.requester_id == request.auth.uid;
      
      // Update logic is complex (Applicant, Helper, Owner), so for now we restrict to signed in users
      // but strictly validate that key immutable fields (requester_id) don't change
      allow update: if isSignedIn() 
                    && request.resource.data.requester_id == resource.data.requester_id;
                    
      // Only Owner can delete
      allow delete: if isSignedIn() && resource.data.requester_id == request.auth.uid;
    }
    
    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // --- System Settings (Global Config) ---
    match /system_settings/{docId} {
       allow read: if true;
       // Strict Admin Check
       allow write: if isAdmin(); 
    }
    
    // --- Transactions & Stats ---
    match /transactions/{txId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.type != 'GIFT'; // Users create records, but GIFT is deprecated
    }
    
    match /daily_stats/{day} {
      allow read: if true;
      allow write: if isSignedIn(); // Users update stats efficiently via increments
    }

    match /location_stats/{statId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // --- Invitation Codes (Alpha Access Keys) ---
    match /invitation_codes/{codeId} {
      // Allow read for verification during registration
      allow read: if isSignedIn();
      // Allow update ONLY to mark as used during registration transaction
      allow update: if isSignedIn() 
                    && resource.data.is_used == false 
                    && request.resource.data.is_used == true
                    && request.resource.data.used_by == request.auth.uid;
    }
  }
}

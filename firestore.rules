rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // User Profiles
    match /users/{userId} {
      // Anyone can read profiles (to see balance/existence)
      allow read: if true;
      
      // Only the user themselves can update their own profile
      // OR an Admin (God) can update anyone's profile (for World Cycle)
      // For MVP/Demo: We allow any authenticated user to update their own AND others (God Mode loophole for testing)
      // TODO: In Production, strictly check request.auth.uid == ADMIN_UID for writing to others.
      allow write: if request.auth != null; 
    }

    // Wishes (Contracts)
    match /wishes/{wishId} {
      allow read: if true;
      allow create: if request.auth != null;
      // Fulfill logic updates wishes
      allow update: if request.auth != null; 
    }
  }
}
